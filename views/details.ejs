                    <div class="tab-header">
                        <button class="tab-btn active" data-tab="description">Description</button>
                        <button class="tab-btn" data-tab="specifications">Specifications</button>
                        <button class="tab-btn" data-tab="reviews" id="reviews-tab">Reviews (<%= reviews.length %>)</button>
                    </div>
                    
                    <!-- Description Tab -->
                    <div class="tab-content active" id="description">
                        <p class="product-description">
                            <%= product.description || 'No detailed description available for this product.' %>
                        </p>
                        
                        <% if (product.features && product.features.length > 0) { %>
                            <ul class="product-features">
                                <% product.features.forEach(feature => { %>
                                    <li><%= feature %></li>
                                <% }); %>
                            </ul>
                        <% } %>
                    </div>
                    
                    <!-- Specifications Tab -->
                    <div class="tab-content" id="specifications">
                        <div class="specs-grid" style="margin-top: 1rem;">
                            <div class="spec-item">
                                <span class="spec-label">Manufacturer</span>
                                <span class="spec-value"><%= product.brand || 'NEXON' %></span>
                            </div>
                            <div class="spec-item">
                                <span class="spec-label">Model Number</span>
                                <span class="spec-value"><%= product.model || 'N/A' %></span>
                            </div>
                            <div class="spec-item">
                                <span class="spec-label">Product Dimensions</span>
                                <span class="spec-value"><%= product.dimensions || 'N/A' %></span>
                            </div>
                            <div class="spec-item">
                                <span class="spec-label">Item Weight</span>
                                <span class="spec-value"><%= product.weight || 'N/A' %></span>
                            </div>
                            <div class="spec-item">
                                <span class="spec-label">Color</span>
                                <span class="spec-value"><%= product.color || 'N/A' %></span>
                            </div>
                            <div class="spec-item">
                                <span class="spec-label">Material</span>
                                <span class="spec-value"><%= product.material || 'N/A' %></span>
                            </div>
                            <% if (product.additionalSpecs) { %>
                                <% Object.entries(product.additionalSpecs).forEach(([key, value]) => { %>
                                    <div class="spec-item">
                                        <span class="spec-label"><%= key %></span>
                                        <span class="spec-value"><%= value %></span>
                                    </div>
                                <% }); %>
                            <% } %>
                        </div>
                    </div>
                    
                    <!-- Reviews Tab -->
                    <div class="tab-content" id="reviews">
                        <div class="reviews-section" id="reviews">
                            <div class="reviews-header">
                                <h3 class="section-title">Customer Reviews</h3>
                                <div class="rating">
                                    <div class="stars">
                                        <% for (let i = 1; i <= 5; i++) { %>
                                            <span class="ri-star-<%= i <= Math.round(avgRating) ? 'fill' : 'line' %>"></span>
                                        <% } %>
                                    </div>
                                    <span><%= (typeof avgRating === 'number' ? avgRating.toFixed(1) : '0.0') %> (<%= reviews.length %> reviews)</span>
                                </div>
                            </div>
                            
                            <% if (reviews.length > 0) { %>
                                <% reviews.forEach(review => { %>
                                    <div class="review-item">
                                        <div class="review-author">
                                            <% if (review.userid.picture) { %>
                                                <img src="data:image/jpeg;base64,<%= review.userid.picture.toString('base64') %>" 
                                                     class="review-author-avatar">
                                            <% } else { %>
                                                <div class="review-author-avatar" style="background: #e2e8f0; display: flex; align-items: center; justify-content: center;">
                                                    <i class="ri-user-line" style="color: #718096;"></i>
                                                </div>
                                            <% } %>
                                            <div class="review-author-info">
