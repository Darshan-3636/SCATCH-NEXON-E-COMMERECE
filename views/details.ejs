<body>
    <!-- Flash Messages -->
    <% if (locals.success && locals.success.length > 0) { %>
        <div class="flash-message flash-success">
            <i class="ri-checkbox-circle-line flash-icon"></i>
            <%= locals.success %>
        </div>
    <% } %>

    <% if (locals.error && locals.error.length > 0) { %>
        <div class="flash-message flash-error">
            <i class="ri-error-warning-line flash-icon"></i>
            <%= locals.error %>
        </div>
    <% } %>
    

    <main class="main-content">
        <div class="product-container">
            <!-- Product Gallery -->
            <div class="product-gallery">
                <div class="main-image-container">
                    <img style="max-width: 500px; max-height: 1000px;" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" 
                         alt="<%= product.name %>" 
                         class="main-image"
                         id="mainImage">
                </div>
                
                <div class="thumbnail-container">
                    <img src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" 
                         alt="Thumbnail" 
                         class="thumbnail active">
                    <!-- Additional thumbnails would go here -->
                </div>
            </div>
            
            <!-- Product Details -->
            <div class="details">
              <h1><a href="javascript:history.back();"><b>Go Back</b></a></h1><br>
                <h1 class="product-title"><%= product.name %></h1>
                <p class="product-subtitle"><%= product.category || 'Premium Product' %></p>
                
                <!-- Product Meta -->
                <div class="product-meta">
                    <div class="meta-item">
                        <i class="ri-barcode-line meta-icon"></i>
                        <span>SKU: <%= product.sku || 'N/A' %></span>
                    </div>
                    <div class="meta-item">
                        <i class="ri-shield-check-line meta-icon"></i>
                        <span>2-Year Warranty</span>
                    </div>
                    <div class="meta-item">
                        <i class="ri-truck-line meta-icon"></i>
                        <span>Free Shipping</span>
                    </div>
                </div>
                
                <!-- Rating -->
                <div class="rating-container">
                    <div class="rating">
                        <div class="stars">
                            <% for (let i = 1; i <= 5; i++) { %>
                                <span class="ri-star-<%= i <= Math.round(avgRating) ? 'fill' : 'line' %>"></span>
                            <% } %>
                        </div>
                        <span><%= (typeof avgRating === 'number' ? avgRating.toFixed(1) : '0.0') %></span>
                    </div>
                    <a href="#reviews" class="review-link"><%= reviews.length %> reviews</a>
                </div>
                
                <!-- Product Highlights -->
                <div class="product-highlights">
                    <h3 class="highlights-title">
                        <i class="ri-sparkling-line"></i> Key Features
                    </h3>
                    <ul class="highlights-list">
                        <% if (product.highlights && product.highlights.length > 0) { %>
                            <% product.highlights.forEach(highlight => { %>
                                <li class="highlight-item"><%= highlight %></li>
                            <% }); %>
                        <% } else { %>
                            <li class="highlight-item">Premium quality materials</li>
                            <li class="highlight-item">Advanced technology</li>
                            <li class="highlight-item">User-friendly design</li>
                            <li class="highlight-item">Excellent performance</li>
                        <% } %>
                    </ul>
                </div>
                
                <!-- Product Specifications -->
                <div class="specs-container">
                    <h3 class="specs-title">Specifications</h3>
                    <div class="specs-grid">
                        <div class="spec-item">
                            <span class="spec-label">Name</span>
