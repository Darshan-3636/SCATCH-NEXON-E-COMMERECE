  <style>

    .fixed-sidebar.collapsed {
  transform: translateX(-100%);
}


    .sidebar-toggle:hover {
        background: #25283B;
        transform: scale(1.05);
    }
    /* Responsive Design */
    @media (max-width: 1024px) {
        .fixed-sidebar {
            width: 260px;
        }
        .main-content {
            margin-left: 0;
            padding: 5rem 1rem 1rem;
        }
        .sidebar-toggle {
            display: block !important;
        }
    }


    /* Price Range Customization */
input[type="range"] {
    -webkit-appearance: none;
    width: 100%;
    background: transparent;
}

input[type="range"]::-webkit-slider-runnable-track {
    width: 100%;
    height: 4px;
    background: #25283B;
    border-radius: 4px;
}

input[type="range"]::-webkit-slider-thumb {
    -webkit-appearance: none;
    height: 16px;
    width: 16px;
    background: #25283B;
    border-radius: 50%;
    margin-top: -6px;
    cursor: pointer;
    border: none;
}

/* Firefox */
input[type="range"]::-moz-range-track {
    width: 100%;
    height: 4px;
    background: #25283B;
    border-radius: 4px;
}

input[type="range"]::-moz-range-thumb {
    height: 16px;
    width: 16px;
    background: #25283B;
    border-radius: 50%;
    border: none;
    cursor: pointer;
}
.icons{
    margin-right: 10px;
    background-color:#25283B ;
}
.main-content {
    /* background-color: #D2D2D2; */
    }
    .main-header {
        background: #25283B;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        position: fixed;
        width: 100%;
        top: 0;
        z-index: 1000;
        height: 82px;
        backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .nav-container {
        max-width: 1440px;
        margin-top: 10px;
        margin-left: 20px;
        padding: 0 2rem;
    }
    

    /* Main Content */
    .main-content {
        margin-left: 300px;
        padding: 6rem 2rem 2rem;
        transition: margin-left 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* Product Grid */
    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
    }
    .a{
      background-color: #25283B;
    }
    .b{
      background-color: #25283B;
      margin-left: 1100px;
    }


    .brand, a{
      font-family: 'Helvetica', 'Arial', sans-serif;
      /* background-color: #f9f9f9; */
    }
    body {
      font-family: 'Helvetica', 'Arial', sans-serif;
      /* background-color: #f9f9f9; */
    }
    main {
      
      font-family: 'Helvetica', 'Arial', sans-serif;
      background-color: #f9f9f9;
      flex: 1;
      padding: 20px;
      background-color: #f4f7fa;
      min-height: 100vh;
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
    }
    .users-section {
      width: 100%;
      background-color: #fff;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      max-height: 100vh;
      overflow: hidden;
    }

    .price-breakdown {
      width: 30%;
      background-color: #fff;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .users-table table, .price-breakdown table {
      width: 100%;
      border-collapse: collapse;
    }

    .users-table th, .users-table td, .price-breakdown th, .price-breakdown td {
      padding: 12px;
      text-align: left;
      font-size: 14px;
      color: #555;
      border-bottom: 1px solid #ddd;
    }

    .users-table th, .price-breakdown th {
      background-color: #f5f5f5;
      font-weight: bold;
    }

    .users-table img {
      max-height: 120px;
      max-width: 100%;
      object-fit: contain;
      background: none;
    }
    h1{
      text-align: center;
    }

</style>
