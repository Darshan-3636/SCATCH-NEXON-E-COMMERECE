    .main-header {
        background: #25283B;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        position: fixed;
        width: 100%;
        top: 0;
        z-index: 1000;
        height: 82px;
        backdrop-filter: blur(10px);
